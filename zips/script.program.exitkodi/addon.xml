<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<addon id="script.program.exitkodi"
  name="ExitKodi"
  version="1.3" 
  provider-name="Biglad">
  <requires>
    <import addon="xbmc.python" version="2.1.0"/>
  </requires>
  <extension point="xbmc.python.script" library="addon.py">
    <provides>executable</provides>
  </extension>
  <extension point="xbmc.addon.metadata">
    <platform>all</platform>
    <summary lang="en">Reboot Android</summary>
    <description lang="en">Reboots your Android device.</description>
	<disclaimer>Your device must already be rooted, and you will need to grant SU permissions to the script when prompted.</disclaimer>
  </extension>
</addon>
